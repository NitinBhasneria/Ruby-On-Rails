<h2><%=@post.title%></h2>
<p><%=@post.body%></p>
<hr>
<%= link_to "Edit", edit_post_path(@post), :class=> 'btn btn-default'%>
<%= link_to "Delete", post_path(@post),
                                    method: :delete,
                                    data: {confirm: 'Are you sure?'},
                                    :class=> 'btn btn-danger'%>
<!--method(or we can say function) :delete allows to delete-->
